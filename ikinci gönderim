import java.util.ArrayList;

import javax.swing.JFrame;
import javax.swing.SwingConstants;

public class Frame extends JFrame {

	int Xbound, Ybound, Xsize, Ysize;

	static Panel1 panel1 = new Panel1();
	static Panel2 panel2 = new Panel2();
	static Panel3 panel3 = new Panel3();
	static ArrayList<String> listofnotes = new ArrayList<>();
	
	Frame() {
		Xbound = 700;
		Ybound = 300;
		Xsize = 500;
		Ysize = 260;
		setBounds(Xbound, Ybound, Xsize, Ysize);
		setLayout(null);
		add(panel1);
		add(panel2);
		add(panel3);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setResizable(false);
		setVisible(true);
	}

	static Panel1 getPanel1() {
		return panel1;
	}
	
	static Panel2 getPanel2() {
		return panel2;
	}
	
}
