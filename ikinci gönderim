public class Panel2 extends JPanel implements ActionListener{

	//MyNotes kısmına tıklanınca gelecek panel
	
	int Xbound, Ybound, Xsize, Ysize;
	static int howmanynoteswehave = 0;
	
	//bu liste jList için
	static DefaultListModel<String> mylist;
	static JList<String> list; 
		
	JScrollPane scroll;
	
	
	Panel2(){		
		
		Xbound = 0;
		Ybound = 0;
		Xsize = 500;
		Ysize = 260;
		setBounds(Xbound, Ybound, Xsize, Ysize);

		setLayout(null);
		
		mylist = new DefaultListModel<>();	
		list = new JList<>(mylist);
		scroll = new JScrollPane(list);
		
		mylist.addElement("eleman1");
		mylist.addElement("eleman2");
		mylist.addElement("eleman3asdfasdf");
		mylist.addElement("eleman3");
		mylist.addElement("eleman3");
		
		list.setBounds(100,30,150,40);		
		scroll.setHorizontalScrollBarPolicy(JScrollPane.HORIZONTAL_SCROLLBAR_ALWAYS);
		scroll.setVerticalScrollBarPolicy(JScrollPane.VERTICAL_SCROLLBAR_ALWAYS);
		add(list);		
		add(scroll);
		
		setVisible(false);
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		if (e.getSource() == list) {
			
		}
		
	}
	
	
	
}
